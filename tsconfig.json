{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "esnext"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "packages/**/*"
  ]
}