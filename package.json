{
  "name": "mrmld",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "cpy '**/*' '!**/*.ts' ../lib/ --cwd=packages/ --overwrite --parents",
    "publish-di": "cd lib/m-di && npm publish --access public",
    "publish-core": "cd lib/m-core && npm publish --access public",
    "publish-utils": "cd lib/m-utils && npm publish --access public"
  },
  "directories": {
    "example": "sample",
    "lib": "packages"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "cpy-cli": "^3.1.1",
    "typescript": "^3.8.3"
  }
}
